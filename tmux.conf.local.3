tmux_conf_new_window_retain_current_path=true
tmux_conf_new_pane_retain_current_path=true
tmux_conf_new_pane_reconnect_ssh=false
tmux_conf_new_session_prompt=true

tmux_conf_copy_to_os_clipboard=true


set -gu prefix2
unbind C-a
unbind C-b
set -g prefix C-a
bind a send-prefix
bind C-a last-window
unbind -n C-l


set -g visual-activity off
set -g visual-bell off
set -g visual-silence on
set -g status-interval 5
set -g history-limit 543210
set -g mouse on

tmux_conf_update_plugins_on_launch=true
tmux_conf_update_plugins_on_reload=true
tmux_conf_uninstall_plugins_on_reload=true
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @plugin 'fcsonline/tmux-thumbs'  # requires Rust/Cargo toolchain
set -g @plugin 'woodstok/tmux-butler'
set -g @tpm-update 'u' # upper-case U conflicts with urlview
set -g @continuum-save-interval '10'    # in minutes, not seconds
set -g @continuum-restore 'on'
set -g @resurrect-processes 'watch ssh sudo "iotop" sudo "iftop" alsamixer dmesg bat less vim vi "fzf" "ipython3"'
set -g @resurrect-capture-pane-contents 'on'
set -g @thumbs-key Tab  # very important since Space is used to rearrange panes
set -g @thumbs-unique enabled
set -g @thumbs-regexp-1 '\b\w{12,}\b' # Match words longer than 12 characters
